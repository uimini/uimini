.navbar
  background-color: navbar-background-color
  min-height: navbar-height
  position: relative
  border-bottom 1px solid #ccc

  &.navbar--black
    background-color: #222

    .navbar-item,
    .navbar-link
      color #fff
    .button-burger
      .line
        background-color #fff

  &.navbar--transparent
    background-color: transparent

  &.navbar-fixed
    position: fixed
    left: 0
    right: 0
    z-index: navbar-fixed-z


.navbar-content
  display flex
  align-items center
  justify-content space-between
  min-height: navbar-height

  .button-burger
    display none
    z-index 442
    @media screen and (max-width: phoneWidth)
      display block

.navbar-list
  display flex
.navbar-list__wrapper

  @media screen and (max-width: phoneWidth)
    display none

  &.active
    display block
    position fixed
    // Becouse border
    top navbar-height + 1
    left 0
    width 100%
    height 100%
    z-index 30
    background-color #fff

    .navbar-list
      flex-direction column
      align-items: center

  .navbar-item
    padding-right 20px
    &:last-child
      padding-right 20px

.navbar-item,
.navbar-link
  display: block
  position: relative
  padding: 0.5rem 0.75rem
  color: navbar-item-color
  cursor: pointer

  &.navbar-item--white,
  &.navbar-link--white
    color #fff

  &:hover,
  &.active
    background-color: navbar-item-hover-background-color
    color: navbar-item-hover-color

  &:last-child
    padding-right: 0