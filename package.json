{
  "name": "uimini",
  "description": "Uimini modern and lightweight CSS framework",
  "version": "2.0.3",
  "keywords": [
    "framework",
    "css-framework",
    "uimini",
    "ui",
    "ui-library",
    "ui-kit",
    "sass",
    "scss",
    "flexbox"
  ],
  "homepage": "https://uimini.github.io/docs/",
  "author": "https://github.com/vedees",
  "browserslist": "last 3 versions",
  "scripts": {
    "dev": "webpack serve --mode development",
    "start": "webpack serve --mode development",
    "build": "npm run build-sass && npm run build-autoprefixer && npm run build-cleancss",
    "build-sass": "node-sass --output-style expanded --source-map false src/uimini.scss dist/uimini.css",
    "build-cleancss": "cleancss -o dist/uimini.min.css dist/uimini.css",
    "build-autoprefixer": "postcss --use autoprefixer --map false --output dist/uimini.css dist/uimini.css",
    "build:doc": "bash ./build-doc.sh",
    "deploy": "bash ./deploy.sh",
    "git": "bash ./lazy.sh",
    "test": "jest"
  },
  "main": "dist/uimini.css",
  "style": "dist/uimini.css",
  "sass": "src/uimini.scss",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uimini/uimini.git"
  },
  "bugs": {
    "url": "https://github.com/uimini/uimini/issues"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.14.1",
    "postcss-cli": "^7.1.2",
    "rimraf": "^3.0.2",
    "css-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "style-loader": "^3.2.1",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "sass-loader": "10.1.1"
  },
  "files": [
    "dist/*.css",
    "src/**/*.scss"
  ]
}
